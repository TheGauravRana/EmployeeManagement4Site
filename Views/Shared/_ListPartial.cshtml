@{
    string CtrlName = ViewBag.ControllerName;
}


<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in ViewBag.datalist)
        {
            <tr>
                <td>@data.Id</td>
                <td>@data.Name</td>
                <td>@data.Email</td>
                <td>
                    <a asp-controller="@CtrlName" asp-action="Details" asp-route-id="@data.Id" class="btn-sm btn-primary">View <i class="fa fa-eye" aria-hidden="true"></i></a>

                    <a asp-controller="@CtrlName" asp-action="Edit" asp-route-id="@data.Id" class="btn-sm btn-primary">Edit <i class="fa fa-edit" aria-hidden="true"></i></a>

                    <a asp-controller="@CtrlName" asp-action="Remove" asp-route-id="@data.Id" class="btn-sm btn-danger">Remove <i class="fa fa-remove" aria-hidden="true"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>