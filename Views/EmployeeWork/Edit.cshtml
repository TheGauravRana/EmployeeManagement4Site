@model EmployeeManagement.Models.EmployeeWork;

@{
    ViewData["Title"] = "Edit EmployeeWork";
}

<h2>Edit WorkTodo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label"></label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.emplist">
            <option value="">-- Select Employee --</option>
        </select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TodoTask" class="control-label"></label>
        <textarea asp-for="TodoTask" class="form-control"></textarea>
        <span asp-validation-for="TodoTask" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Remarks" class="control-label"></label>
        <textarea asp-for="Remarks" class="form-control"></textarea>
        <span asp-validation-for="Remarks" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkStatus" class="control-label"></label>
        <select asp-for="WorkStatus" class="form-control">
            <option value="Active">Active</option>
            <option value="Done">Done</option>
        </select>
        <span asp-validation-for="WorkStatus" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>
